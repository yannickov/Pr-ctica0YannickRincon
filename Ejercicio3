// Codigo número 3
#include <iostream>

using namespace std;

int main() 
{
    for(int i = 0; i < 4; ++i)          //ciclo for que va desde 0 hasta 3 con incremento de 1
    {
        switch(i)                       //Ciclo switch dentro del ciclo for
        {
            case 0: cout<<"0";          // En el caso cero se imprime 0
            case 1: cout<<"1"; continue;   //En el caso 1 se imprime 1 y se especifica que continúe el ciclo
            case 2: cout<<"2"; break;      //En el caso 2 se imprime 2 y se rompe el ciclo
            default: cout<<"D"; break;     //En el caso por default se imprime D y se rompe el ciclo 
        }
        
        cout<<"*";                        //Fuera del ciclo y dentro del ciclo for se imprime un *
    }
    return 0;
}
